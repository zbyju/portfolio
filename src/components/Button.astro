---
interface Props {
  text: string;
  link: string;
}

const { text, link } = Astro.props;
---

<a href={link}>
  <button
    class="px-4 text-xl font-medium hover:px-6 transition-all duration-500 ease-in-out rounded-full py-2 bg-stone-950 text-primary-100 dark:bg-stone-950 dark:text-stone-300"
    >{text}</button
  >
</a>
