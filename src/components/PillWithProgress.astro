---
import { Circle } from "lucide-astro";

interface Props {
  text: string;
  progress: number;
  color: string;
}

const { text, progress, color } = Astro.props;
---

<div
  class={`px-4 rounded-full flex flex-col gap-[3px] pt-[6px] pb-[8px] bg-${color}-900 text-${color}-50`}
>
  <span class="text-center inline-block py-[4px] leading-3 line-clamp-1"
    >{text}</span
  >
  <!-- <div
    class="w-full bg-zinc-900 h-[5px] rounded-full flex items-center px-[1px]"
  >
    <div
      class={`bg-${color}-400 h-full my-auto rounded-full border border-collapse border-zinc-900`}
      style={`width: ${width}%`}
    >
    </div>
  </div> -->
  <div class="flex flex-row gap-[4px] mx-auto">
    {
      Array(5)
        .fill(0)
        .map((_, i) => (
          <Circle
            class={`w-[6px] h-[6px] rounded-full border border-${color}-900 ${progress > i ? `fill-${color}-200 text-${color}-200` : `fill-zinc-900 text-zinc-900`}`}
          />
        ))
    }
  </div>
</div>
